<phpunit bootstrap="tests/bootstrap.php"
         colors="true">
    <testsuites>
        <testsuite name="unit">
            <directory>tests/unit</directory>
        </testsuite>
    </testsuites>
    <logging>
        <log type="coverage-html" target="build/reports/codeCoverage" charset="UTF-8"/>
    </logging>
    <filter>
        <whitelist>
            <directory suffix=".php">v1_7</directory>
            <directory suffix=".php">v2</directory>
            <directory suffix=".php">src</directory>
        </whitelist>
    </filter>
</phpunit>
